                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.account.AccountInfoActivity"
            android:label="@string/activity_info_account_label" >
            <intent-filter>
